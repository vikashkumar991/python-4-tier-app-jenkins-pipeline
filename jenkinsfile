pipeline {
    agent { label 'node1' }
    environment {
        DOCKER_IMAGE_FRONTEND = 'vikashkumar99/python-4-tier-frontend'
        DOCKER_IMAGE_BACKEND = 'vikashkumar99/python-4-tier-backend'
      }
    stages {
        stage('clone git repo') {
            steps {
                git url: "https://github.com/vikashkumar991/python-4-tier-app-jenkins-pipeline.git", branch: "main"
                echo "git clone succesfully"
                sh 'whoami'
            }
        }
        stage('build image') {
            steps {
                sh "docker build -t '$DOCKER_IMAGE_FRONTEND' ./frontend"
                sh "docker build -t '$DOCKER_IMAGE_BACKEND' ./backend"
                echo "image build succesfully"
            }
        }
        stage('push image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                sh 'docker login -u "$DOCKER_USER" -p "$DOCKER_PASS"'
                sh 'docker push "$DOCKER_IMAGE_FRONTEND"'
                sh 'docker push "$DOCKER_IMAGE_BACKEND"'
                echo "image push succesfully"
                }
            }
        }
        stage('run image') {
            steps {
                sh "docker-compose up -d"
                echo "image run succesfully"
            }
        }
    }
}
